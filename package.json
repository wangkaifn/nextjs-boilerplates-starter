{
  "name": "nextjs-boilerplates-starter",
  "version": "0.1.2-beta.1",
  "description": "🏗️ 现代化 Next.js 脚手架项目 - 集成 React 19、TypeScript、Tailwind CSS v4 和完整的开发工具链",
  "private": true,
  "homepage": "https://github.com/wangkaifn/nextjs-boilerplates-starter#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/wangkaifn/nextjs-boilerplates-starter.git"
  },
  "bugs": {
    "url": "https://github.com/wangkaifn/nextjs-boilerplates-starter/issues"
  },
  "author": "wangkaifn",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "boilerplate",
    "starter",
    "template",
    "pnpm",
    "commitizen",
    "release-it",
    "conventional-commits"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"./**/*.{js,mjs,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"./**/*.{js,mjs,jsx,ts,tsx,json,css,scss,md}\"",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "commitlint": "commitlint --edit",
    "commit": "cz",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "release:dry": "release-it --dry-run"
  },
  "dependencies": {
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@release-it/conventional-changelog": "^10.0.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.4.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "inquirer": "^9.3.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.1",
    "release-it": "^19.0.3",
    "release-it-pnpm": "^4.6.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
