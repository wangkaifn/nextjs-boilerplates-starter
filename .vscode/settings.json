{
    // 配置项，用于指定在搜索时应该排除的文件夹和文件
    "search.exclude": {
      "/node_modules": true, // 排除node_modules文件夹
      "dist": true, // 排除dist文件夹
      "pnpm-lock.sh": true // 排除pnpm-lock.sh文件
    },
    // 默认格式化工具
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  
    // 保存时自动格式化
    "editor.formatOnSave": true,
    
    // 为特定文件类型指定格式化工具
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.formatOnSave": true
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.formatOnSave": true
    },
  
    // 粘贴时自动格式化
    "editor.formatOnPaste": true,
  
    // 保存时执行的代码操作
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit", // 自动修复 ESLint 错误
      "source.fixAll.stylelint": "explicit", // 自动修复 Stylelint 错误
      "source.organizeImports": "explicit" // 自动整理导入
    },
  
    // TypeScript 导入偏好
    "typescript.preferences.importModuleSpecifier": "relative",
  
    // Emmet 支持
    "emmet.includeLanguages": {
      "typescript": "html",
      "typescriptreact": "html"
    },
  
    // Tailwind CSS 支持
    "files.associations": {
      "*.css": "tailwindcss"
    },
  
    // 字符串中启用快速建议
    "editor.quickSuggestions": {
      "strings": true
    }
  }
  